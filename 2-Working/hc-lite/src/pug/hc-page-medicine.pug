        // Header Area 
        .header-area#headerArea
            .container
                // Header Content 
                .header-content.header-style-five.position-relative.d-flex.align-items-center.justify-content-between
                    // Back Button 
                    .back-button
                        a(href="hc-page-home.html")
                            include inc/back-btn.pug

                    // Page Title 
                    .page-heading
                        h6.mb-0 Tủ thuốc

                    // Navbar Toggler 
                    .navbar--toggler#affanNavbarToggler(data-bs-toggle="offcanvas", data-bs-target="#affanOffcanvas", aria-controls="affanOffcanvas")
                        span.d-block
                        span.d-block
                        span.d-block

        include inc/sidenav.pug

        // Add new contact modal 
        .add-new-contact-modal.modal.fade.px-0#addnewcontact(data-bs-backdrop="static", data-bs-keyboard="false", tabindex="-1", aria-labelledby="addnewcontactlabel", aria-hidden="true")
            .modal-dialog.modal-dialog-centered
                .modal-content
                    .modal-body.p-4
                        .d-flex.align-items-center.justify-content-between.mb-4
                            h6.modal-title#addnewcontactlabel Thêm thuốc mới
                            button.btn.btn-close.p-1.ms-auto.me-0(type="button", data-bs-dismiss="modal", aria-label="Close")

                        form(action="#")
                            .input-group.mb-3
                                span.input-group-text#patient-name Tên thuốc
                                input.form-control(type="text" placeholder="" aria-label="Họ tên bệnh nhân" aria-describedby="patient-name")
                            .input-group.mb-3
                                span.input-group-text#patient-phone Mã thuốc
                                input.form-control(type="text" placeholder="" aria-label="Điện thoại" aria-describedby="patient-phone")
                            .input-group.mb-3
                                span.input-group-text#patient-price-buy Giá nhập
                                input.form-control(type="text" placeholder="" aria-label="Địa chỉ" aria-describedby="patient-address")
                            .input-group.mb-3
                                span.input-group-text#patient-price-sale Giá bán
                                input.form-control(type="text" placeholder="" aria-label="Địa chỉ" aria-describedby="patient-address")
                            .input-group.mb-3
                                span.input-group-text#patient-price-sale Số lượng
                                input.form-control(type="text" placeholder="" aria-label="Địa chỉ" aria-describedby="patient-address")
                            .input-group.mb-3
                                span.input-group-text#patient-price-sale Chiết  khấu
                                input.form-control(type="text" placeholder="" aria-label="Địa chỉ" aria-describedby="patient-address")
                            .form-group
                                label.form-label(for="patient-note") Ghi chú
                                textarea.form-control#patient-note(name="textarea", cols="3", rows="5", placeholder="")
                            button.btn.btn-primary.w-100(type="submit") Lưu

