doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        include inc/internet-status.pug

        include inc/dark-rtl-loader.pug

        // Header Area
        .header-area#headerArea
            .container
                // Header Content
                .header-content.header-style-four.position-relative.d-flex.align-items-center.justify-content-between
                    // Back Button
                    .back-button
                        a(href="page-home.html")
                            include inc/back-btn.pug

                    // Page Title
                    .page-heading
                        h6.mb-0 Cài đặt

                    // User Profile
                    .user-profile-wrapper
                        a.user-profile-trigger-btn(href="#")
                            img(src="img/bg-img/20.jpg", alt="")

        .page-content-wrapper.py-3
            .container
                // Setting Card
                .card.mb-3.shadow-sm
                    .card-body.direction-rtl
                        p Cài đặt

                        .single-setting-panel
                            .form-check.form-switch.mb-2
                                input.form-check-input(type="checkbox", id="flexSwitchCheckDefault", checked)
                                label.form-check-label(for="flexSwitchCheckDefault") Trạng thái khả dụng

                        .single-setting-panel
                            .form-check.form-switch.mb-2
                                input.form-check-input(type="checkbox", id="flexSwitchCheckDefault2", checked)
                                label.form-check-label(for="flexSwitchCheckDefault2") Nhận thông báo

                        .single-setting-panel
                            .form-check.form-switch.mb-2
                                input.form-check-input(type="checkbox", id="darkSwitch")
                                label.form-check-label(for="darkSwitch") Chế độ đêm

                        .single-setting-panel
                            .form-check.form-switch
                                input.form-check-input(type="checkbox", id="rtlSwitch")
                                label.form-check-label(for="rtlSwitch") Chuyển đổi trái phải

                // Setting Card
                .card.mb-3.shadow-sm
                    .card-body.direction-rtl
                        p Tài khoản

                        .single-setting-panel
                            a(href="page-user-profile.html")
                                .icon-wrapper
                                    i.bi.bi-person
                                | Cập nhật hồ sơ

                        .single-setting-panel
                            a(href="page-user-profile.html")
                                .icon-wrapper.bg-warning
                                    i.bi.bi-pencil
                                | Cập nhật tiểu sử

                        .single-setting-panel
                            a(href="page-change-password.html")
                                .icon-wrapper.bg-info
                                    i.bi.bi-lock
                                | Đổi mật khẩu

                        .single-setting-panel
                            a(href="page-language.html")
                                .icon-wrapper.bg-success
                                    i.bi.bi-globe2
                                | Ngôn ngữ

                        .single-setting-panel
                            a(href="page-privacy-policy.html")
                                .icon-wrapper.bg-danger
                                    i.bi.bi-shield-lock
                                | Chính sách quyền riêng tư

                // Setting Card
                .card.shadow-sm
                    .card-body.direction-rtl
                        p Đăng ký &amp; Đăng xuất

                        .single-setting-panel
                            a(href="page-register.html")
                                .icon-wrapper.bg-primary
                                    i.bi.bi-person
                                | Tạo tài khoản mới

                        .single-setting-panel
                            a(href="page-login.html")
                                .icon-wrapper.bg-danger
                                    i.bi.bi-box-arrow-right
                                | Đăng xuất

        include inc/footer-nav.pug

        include inc/footer.pug